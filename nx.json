{
  "affected": {
    "defaultBase": "main"
  },
  "parallel": 4,
  "sourceRoot": "{projectRoot}/src",
  "projectType": "package",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "!{projectRoot}/dist/**/*"],
    "dist": ["{projectRoot}/dist/**/*"],
    "production": ["default"]
  },
  "targetDefaults": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["default"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["tsc"]
      },
      "cache": true
    },
    "build:production": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "inputs": ["dist"],
      "outputs": [],
      "cache": true
    },
    "build:next": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["default"],
      "outputs": ["{projectRoot}/.next", "{projectRoot}/dist"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["next build"]
      },
      "cache": true
    },
    "dev:next": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": ["default"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["next dev --turbo"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "inputs": ["dist"],
      "outputs": [],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["node --no-warnings --watch dist/server.js"],
        "parallel": true
      }
    },
    "lint:check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["eslint \"src/**/*.{ts,tsx}\""]
      },
      "cache": true
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["eslint --fix \"src/**/*.{ts,tsx}\""]
      },
      "cache": true
    },
    "format": {
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "prettier \"src/**/*.{js,jsx,css,md,html,ts,tsx,json,yaml}\" --check"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "inputs": ["default"],
      "outputs": [],
      "options": {
        "cwd": "{projectRoot}",
        "command": "node --experimental-vm-modules --no-warnings ../../node_modules/jest/bin/jest.js"
      },
      "cache": true
    }
  }
}
